{
	"Version": "2012-10-17",
		"Statement": [
		{
			"Effect": "Allow",
			"Action": "ec2:Describe*",
			"Resource": "*"
		},
		{
			"Effect": "Allow",
			"Action": [
		        "logs:CreateLogGroup",
			"logs:CreateLogStream",
			"logs:PutLogEvents"
			],
			"Resource": "arn:aws:logs:*:*:*"
		},
		{
			"Effect": "Allow",
			"Action": [
				"route53:*"
			],
			"Resource": [
				"*"
			]
		},
		{
			"Effect": "Allow",
			"Action": [
				"autoscaling:Describe*"
			],
			"Resource": [
				"*"
			]
		}
	]
}
