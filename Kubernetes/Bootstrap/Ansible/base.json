{

"builders": [{
  "type": "amazon-ebs",
  "region": "us-west-2",
  "source_ami": "ami-d2c924b2",
  "instance_type": "t2.micro",
  "ssh_username": "centos",
  "ssh_pty" : false,
  "ami_name": "cncfbase{{timestamp}}",
  "user_data_file": "scripts/disable_tty.sh"
}],

"provisioners": [{
      "type": "ansible",
      "playbook_file": "playbooks/base/main.yml",
      "user": "centos",
      "sftp_command": "/usr/libexec/openssh/sftp-server",
      "extra_arguments": [ "-vvv", "--extra-vars", "packer=yes" ]
  }]

}
